# --- API Settings ---
# Default to 80 if not specified in production
APP_PORT=3000

# --- Temporal Settings ---
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=epub-queue

# --- Wattpad EPUB Settings ---
DOWNLOADS_DIR=./downloads
EPUB_OUTPUT_DIR=./epub
COVER_UPLOAD_DIR=./cover
LOG_DIR=./logs

# Download & Processing
DEFAULT_CONCURRENCY=4
DOWNLOAD_MAX_RETRIES=10
DOWNLOAD_RETRY_BACKOFF=2.0
DOWNLOAD_DELAY=2

# --- Gemini API Settings ---
# Get your key from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# --- Redis Settings (Optional/Future Scaling) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=password102
REDIS_DB=0

# --- AWS S3 Storage Settings ---
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=password102
AWS_REGION=us-east-1
S3_BUCKET_NAME=default
S3_ENDPOINT_URL=http://minio:9000

# --- Operational Settings ---
# Number of parallel tasks sent to Gemini
CONCURRENCY_LIMIT=5

# User Synchronization
# Run `id -u` and `id -g` on your host to get these values
WWWUSER=501
WWWGROUP=20
